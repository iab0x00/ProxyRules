#!name=Spotify去广告
#!desc=部分解锁Premium，音质不能设置为超高，建议重新登录
#!author=app2smile[https://github.com/app2smile]

[Script]
spotify-json = type=http-request, pattern=^https:\/\/spclient\.wg\.spotify\.com\/(artistview\/v1\/artist|album-entity-view\/v2\/album)\/, script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-json.js, requires-body=false, timeout=60

spotify-proto = type=http-response, pattern=^https:\/\/spclient\.wg\.spotify\.com\/(bootstrap\/v1\/bootstrap|user-customization-service\/v1\/customize)$, script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-proto.js, requires-body=true, binary-body-mode=true, max-size=0, timeout=60

[MITM]
hostname = %APPEND% spclient.wg.spotify.com